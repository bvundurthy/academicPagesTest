source 'https://rubygems.org'

group :jekyll_plugins do
  gem 'jekyll'
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-redirect-from'
  gem 'jemoji'
  gem 'webrick', '~> 1.8'
  gem 'jekyll-gist'
  gem 'jekyll-scholar'
end

gem 'github-pages'
gem 'connection_pool', '2.5.0'

# For Windows: provides necessary timezone data and locks to a compatible version
gem 'tzinfo', '~> 1.2'
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw]

# For newer Ruby versions on Windows
gem 'bigdecimal'
